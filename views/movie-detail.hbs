<div class="detail">
    <div>
        <img src="{{movie.image}}" alt="{{movie.title}}">
    </div>
    <div>
        <a href="/movies">Go back</a>
        <h1>{{movie.title}}</h1>
        <h2>Director: {{movie.director}}</h2>
        <br>
        <h3>Stars:</h3>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
    </div>
</div>