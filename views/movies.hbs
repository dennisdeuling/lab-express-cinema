<h1>Ironhack Cinema</h1>
<p>Click on the movie to check the showtimes</p>

<div class="flex">
{{#each movies}}
<div class="card" style="width: 18rem;">
    <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
    <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <a href="/movies/{{id}}" class="btn btn-primary">See more</a>
    </div>
</div>
{{/each}}
</div>
